{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/bin/Release/net8.0/ConsoleAppVisuals.dll"],
          "src": "../src/ConsoleAppVisuals/"
        }
      ],
      "dest": "references",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": ["introduction/**"]
      },
      {
        "files": ["elements/**"]
      },
      {
        "files": ["references/**.yml", "references/index.md"]
      },
      {
        "files": ["articles/**"]
      },
      {
        "files": ["legacy/**"]
      },
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": ["assets/**"],
    "output": "_site",
    "template": ["default", "modern"],
    "keepFileLink": false,
    "disableGitFeatures": false,
    "globalMetadata": {
      "_appName": "ConsoleAppVisuals",
      "_appTitle": "ConsoleAppVisuals",
      "_appFooter": "Copyright (C) 2024  MorganKryze (Yann Vidamment)",
      "_appLogoPath": "assets/images/svg/book.svg",
      "_appFaviconPath": "assets/images/svg/book.svg",
      "_enableSearch": true,
      "_disableContribution": true,
      "pdf": true
    }
  }
}
